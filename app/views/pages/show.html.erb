<div>
  <h2>Show Page</h2>

  <%= link_to("Back to list", pages_path, :class => 'back-link') %>

  <table>
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
      <th>Subject ID</th>
      <td><%= @page.subject_id %></td>
    </tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created </th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>

  </table>
</div>

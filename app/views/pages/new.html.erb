<%= link_to("Back to list", pages_path, :class => 'back-link') %>

<div>
  <h2>Create Page</h2>

  <%= form_for(@page) do |f| %>

      <table>
        <tr>
          <th>Name</th>
          <td><%= f.text_field(:name) %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= f.text_field(:position) %></td>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%= f.text_field(:visible) %></td>
        </tr>
      </table>

      <div>
        <%= f.submit("Create Page") %>
      </div>

  <% end %>
</div>
